@model ScootersMc.App.ViewModels.MembroMcViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}

    <h4 style="padding-top:30px">@ViewData["Title"] </h4>


<hr />

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           
            <label>Imagem Atual</label>
            <br />

            <div class="form-group">
                <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 200px; height: 200px" />
            </div>
            <br />

            <label> Nova Imagem</label>

            <div class="input-group mb-3">
                <input type="file" class="form-control" id="ImagemUpLoad" asp-for="ImagemUpload" />
                <label class="input-group-text" for="ImagemUpLoad">Procurar</label>
                <label stye="display:none" id="img_none"></label>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Hierarquia" class="control-label"></label>
                <select asp-for="Hierarquia" class="form-control">
                    <option selected="@((int)Model.Hierarquia == 1)"></option>
                    <option selected="@((int)Model.Hierarquia == 2)">Prospect</option>
                    <option selected="@((int)Model.Hierarquia == 3)">Soldado</option>
                    <option selected="@((int)Model.Hierarquia == 4)">Vice-Presidente</option>
                    <option selected="@((int)Model.Hierarquia == 5)">Presidente</option>
                </select>
                <span asp-validation-for="Hierarquia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoSanguineo" class="control-label"></label>
                <select asp-for="TipoSanguineo" class="form-control">
                    <option selected="@((int)Model.TipoSanguineo == 1)"></option>
                    <option selected="@((int)Model.TipoSanguineo == 2)">A_Positivo</option>
                    <option selected="@((int)Model.TipoSanguineo == 3)">A_Negativo</option>
                    <option selected="@((int)Model.TipoSanguineo == 4)">B_Positivo</option>
                    <option selected="@((int)Model.TipoSanguineo == 5)">B_Negativo</option>
                    <option selected="@((int)Model.TipoSanguineo == 6)">O_Positivo</option>
                    <option selected="@((int)Model.TipoSanguineo == 7)">O_Negativo</option>
                    <option selected="@((int)Model.TipoSanguineo == 8)">AB_Positivo</option>
                    <option selected="@((int)Model.TipoSanguineo == 9)">AB_Negativo</option>
                </select>
                <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>

            <div class="form-group">
                <a class="btn btn-info" asp-action="Index">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
